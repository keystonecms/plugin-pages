{% extends '@pages/admin/layout.twig' %}

{% block title %}Edit page – Keystone{% endblock %}

<div class="container-fluid">

    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h4 mb-1">
                Edit page: {{ page.title }}
            </h1>
            <small class="text-muted">
                /{{ page.slug }}
            </small>
        </div>

        <div class="btn-group">
            <a href="/admin/pages/{{ page.id }}/edit-richtext"
               class="btn btn-sm {{ mode == 'richtext' ? 'btn-primary' : 'btn-outline-primary' }}">
                Rich text
            </a>

            <a href="/admin/pages/{{ page.id }}/edit-blocks"
               class="btn btn-sm {{ mode == 'blocks' ? 'btn-primary' : 'btn-outline-primary' }}">
                Blocks
            </a>
        </div>
    </div>

    <!-- Status bar -->
    <div class="alert alert-light py-2 mb-4 d-flex justify-content-between align-items-center">
        <div>
            <strong>Status:</strong> {{ page.status|capitalize }}
            · Last saved: <span id="last-saved">just now</span>
        </div>

        <span id="autosave-status" class="text-muted small">
            Saved
        </span>
    </div>

    <!-- Editor -->
    <div class="card">
        <div class="card-body">

            {% block editor %}
            <!-- editor content here -->
            {% endblock %}

        </div>
    </div>
</div>
